.ext-proyecto-de-ley
  #banner
    position relative
    background-color #333

    &:after
      content ''
      display block
      padding-top 35%

.proyecto-de-ley
  display flex
  flex-wrap wrap
  justify-content center
  margin 26px 17px 0

  .box
    min-width 250px
    max-width 440px
    width 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    margin 0 10px 20px
    color #fff
    padding 20px

    h2
      flex 1
      width 100%
      text-align center
      font-weight 100
      font-size 37px
      margin .8em 0

    button
      width 250px
      padding 7px 0
      margin-bottom 30px
      font-size 18px

  #Congreso
    background #f90087

  #Justicia
    background #00b33a

  #Publica
    background #fbb900

  #Electoral
    background #225db8