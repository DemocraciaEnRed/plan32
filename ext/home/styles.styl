.ext-home
  article
    width 1080px
    margin 0 auto

    h1
      text-align center
      font-size 41px

    button,
    a.button
      cursor pointer
      background #000
      color #fff
      text-transform uppercase
      border none
      font-size 19px
      padding 9px 40px
      font-weight bold

  #intro
    margin-top 80px

    h1
      margin-bottom 30px

    & > div
      display flex
      height 272px
      margin 0 8px 0 38px

      & > div
        flex 1
        padding 0 0 0 40px
        height 100%
        color #231f20
        position relative

        a
          position absolute
          bottom 0

        p
          padding 0
          margin 0
          font-size 20px
          line-height 1.4
          font-family Roboto
          font-weight 100

  #video
    width 480px

  #propuestas
    padding-top 60px

    h1
      margin 0

  #boxes
    display flex
    flex-wrap wrap
    justify-content space-around
    margin 26px 17px 0

    .box
      height 211px
      min-width 480px
      display flex
      flex-direction column
      justify-content center
      align-items center
      margin-bottom 40px
      color #fff

      h2
        width 100%
        text-align center
        font-weight 100
        font-size 37px
        flex 1

      button
        width 250px
        padding 7px 0
        margin-bottom 30px
        font-size 18px

  #Congreso
    background #f90087

  #Justicia
    background #00b33a

  #Publica
    background #fbb900

  #Electoral
    background #225db8

  #map
    position relative
    height 516px
    width 100%

    iframe
      width 100%
      height 100%

  #quiero
    position absolute
    width 360px
    background #fff
    top 96px
    right 56%
    text-align center
    height 302px

    h2
      text-transform uppercase
      margin 36px 0 12px 0
      font-family sans
      font-size 27px

    p
      padding 0 40px
      font-family Roboto
      font-weight 100

    .exclam
      font-weight bold
      margin 22px 0 20px 0

  #noticias
    padding-top 36px
