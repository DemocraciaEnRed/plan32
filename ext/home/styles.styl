.ext-home
  article
    margin 0 auto 60px
    max-width 100%

    &:last-child
      margin-bottom 0

    h1
      text-align center
      font-size 41px

  #banner
    position relative
    background-color #333

    &:after
      content ''
      display block
      padding-top 35%

  #intro
    margin-top 0

    h1
      margin 0 0 30px

    .text
      position relative
      color #231f20
      text-align center

      p
        padding 0
        margin 0 0 1em
        font-size 20px
        line-height 1.4
        font-family Roboto
        font-weight 100

  #propuestas
    h1
      margin 0

  #boxes
    display flex
    flex-wrap wrap
    justify-content center
    margin 26px 17px 0

    .box
      min-width 250px
      max-width 440px
      width 100%
      display flex
      flex-direction column
      justify-content center
      align-items center
      margin 0 10px 20px
      color #fff
      padding 20px

      h2
        flex 1
        width 100%
        text-align center
        font-weight 100
        font-size 37px
        margin .8em 0

      button
        width 250px
        padding 7px 0
        margin-bottom 30px
        font-size 18px

  #Congreso
    background #f90087

  #Justicia
    background #00b33a

  #Publica
    background #fbb900

  #Electoral
    background #225db8

  #map
    position relative
    width 100%

  #quiero
    position absolute
    width 360px
    background #fff
    top 96px
    right 56%
    text-align center
    height 302px

    h2
      text-transform uppercase
      margin 36px 0 12px 0
      font-family sans
      font-size 27px

    p
      padding 0 40px
      font-family Roboto
      font-weight 100

    .exclam
      font-weight bold
      margin 22px 0 20px 0

  #noticias
    padding-top 36px
