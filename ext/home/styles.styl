.ext-home
  article
    margin 0 auto 60px
    max-width 100%

    &:last-child
      margin-bottom 0

    h1
      margin-top 0
      text-align center

  #banner
    position relative
    background-color #333

    &:after
      content ''
      display block
      padding-top 35%

  #intro
    margin-top 0

    a
      margin-top 15px

  #map
    position relative
    width 100%

  #quiero
    position absolute
    width 360px
    background #fff
    top 96px
    right 56%
    text-align center
    height 302px

    h2
      text-transform uppercase
      margin 36px 0 12px 0
      font-family sans
      font-size 27px

    p
      padding 0 40px
      font-family Roboto
      font-weight 100

    .exclam
      font-weight bold
      margin 22px 0 20px 0

  #noticias
    padding 36px 0 50px

@import '../../node_modules/flickity/css/flickity.css'