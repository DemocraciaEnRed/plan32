.custom-header
  display flex
  justify-content center
  align-items center
  position fixed
  width 100%
  top 0
  height 50px
  padding 0 20px
  box-sizing border-box
  position relative

  #mobileMenuBtn
    width 56px
    height 44px
    position absolute
    left 0
    padding 16px 15px 0
    z-index 999
    cursor pointer

    .bar-icon
      background #333
      height 3px
      margin-bottom 5px
      display block
  #mobileMenuChk:checked
    & ~ ul li
      display block

  ul
    display block
    margin 0
    background #fff
    position fixed
    z-index 99
    width 100%
    height auto
    left 0
    top 50px
    list-style none
    font-size 14px
    text-transform uppercase
    text-align center
    padding 0

    li
      display none
      margin 13px 20px 13px
      color #6d6e70

      a
        color #6d6e70
        font-weight 400
        letter-spacing 0.1px

    .link
      margin 0 20px

      &:hover
        a
          color #333

      a
        display block
        padding 30px 0 20px

  .transparencia
    width 65px
    display none

  .logo
    display block
    margin 0
    left 0
    height 45px
    position fixed
    top 2px
    width 100%
    img
      height 100%

@media (min-width: 1100px)
  .custom-header
    padding 0 180px

@media (min-width: 800px)
  .custom-header
    justify-content space-between
    .transparencia
      display block
    .transparencia:last-child
      margin 0
      left 0
      height auto
      position relative
      top 0
    ul
      padding 0 0 0 17px

@media (min-width: 620px)
  .custom-header
    height 109px

    #mobileMenuBtn
      display none

    ul
      display flex
      align-items center
      height 100%
      position relative
      top 0
      width auto
      li
        display block
        margin-bottom 0
      .logo
        position relative
        height 60px
        width auto
      .transparencia:last-child
        position relative
        top 0
        height auto
