.topics-cards
  display flex
  flex-wrap wrap
  justify-content center
  padding-left 0
  padding-right 0

.topic-container
  display inline-block
  position relative
  margin 15px
  width 260px
  background-color #fff
  box-shadow 0 2px 2px rgba(0,0,0,0.2)

  &:hover
    text-decoration none
    background-color #333

    .title
      color #fff

    .pic
      opacity .7

.topic-card
  display flex
  flex-direction column
  padding 0 20px

  .title
    margin 20px 0
    color #111
    font-size 1.3em
    font-weight 400
    line-height 1.3

  .pic,
  .pic-spacer
    height 170px
    margin 0 -20px
    width 100%

  .pic
    position absolute
    bottom 0
    left 20px
    background-size cover
    background-position center center
