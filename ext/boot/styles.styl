body
  font-family 'Roboto', sans-serif

h1,
h2,
h3,
h4,
h5,
h6
  font-family 'Adelle', serif

p
  line-height 1.4
  font-size 18px

.p32-btn
  display inline-block
  cursor pointer
  background #333
  color #fff
  text-transform uppercase
  border none
  font-size 18px
  padding 9px 30px
  font-weight bold
  text-align center

  &:hover
    color #fff
    background-color #666

.with-two-cols
  display flex
  flex-wrap wrap
  align-items flex-start
  justify-content center
  margin-bottom 20px

  & > *
    width 100%
    max-width 50%
    min-width 320px
    padding 0 20px
    margin-bottom 20px

    @media (max-width: 960px)
      max-width 100%

.responsive-video
  position relative

  &:after
    content ''
    display block
    width 100%
    padding-top 56.25%

  iframe
    position absolute
    left 0
    top 0
    width 100%
    height 100%

.responsive-video-wide
  position relative
  max-height 500px
  max-height unquote('calc(90vh - 120px)')
  margin-bottom 37px

  &.full-height
    max-height unquote('calc(100vh - 110px)')

    .video-wrapper
      max-width unquote('calc((100vh - 110px) *  1.778)')

  .video-wrapper
    position relative
    max-width 888px
    max-width unquote('calc((90vh - 120px) *  1.778)')
    margin 0 auto
    background-color #222

    &:before
      display block
      content ''
      padding-top 56.25% /* 16:9 */
      max-height 100%

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none
