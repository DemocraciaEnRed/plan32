body
  font-family 'Roboto', sans-serif

h1,
h2,
h3,
h4,
h5,
h6
  font-family 'Adelle', serif

p
  line-height 1.4
  font-size 18px

.p32-btn
  display inline-block
  cursor pointer
  background #333
  color #fff
  text-transform uppercase
  border none
  font-size 18px
  padding 9px 30px
  font-weight bold
  text-align center

  &:hover
    color #fff
    background-color #666

.with-two-cols
  display flex
  flex-wrap wrap
  align-items flex-start
  justify-content center
  margin-bottom 20px

  & > *
    width 100%
    max-width 50%
    min-width 320px
    padding 0 20px
    margin-bottom 20px

    @media (max-width: 960px)
      max-width 100%

.responsive-video
  position relative

  &:after
    content ''
    display block
    width 100%
    padding-top 56.25%

  iframe
    position absolute
    left 0
    top 0
    width 100%
    height 100%
